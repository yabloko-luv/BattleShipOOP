<Window x:Class="WPF_App.MainWindow_View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WPF_App.MVVM.ViewModel"
        xmlns:v="clr-namespace:WPF_App.MVVM.View"
        xmlns:fade="clr-namespace:VsrFade.Controls;assembly=VsrFade"
        mc:Ignorable="d"
        MinHeight="600" MinWidth="1000"
        Height="600" Width="1000"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <vm:MainWindow_ViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="Path">
            <Setter Property="Stretch" Value="Uniform" />
            <Setter Property="Fill" Value="White" />
            <Setter Property="Height" Value="20" />
        </Style>

        <!-- Стиль для кнопок заголовка -->
        <Style TargetType="fade:FadeButton" x:Key="TitleButtonStyle">
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FocusedBackground" Value="#3FFFFFFF" />
            <Setter Property="TimeFadeMilliseconds" Value="200" />
            <Setter Property="CornerRadius" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </Window.Resources>

    <Border x:Name="EdgeBorder"
            BorderThickness="1"
            BorderBrush="#333333"
            Background="#212121"
            CornerRadius="0"
            ClipToBounds="True">

        <Grid Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--Content-->
            <Border Grid.Row="1" DockPanel.Dock="Top">
                <ContentPresenter
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                    VirtualizingStackPanel.IsVirtualizing="true" RenderOptions.BitmapScalingMode="HighQuality"
                    TextOptions.TextFormattingMode="Ideal"
                    Content="{Binding CurrentView, Mode=TwoWay}">
                </ContentPresenter>
            </Border>

            <!--TitleBar-->
            <Border x:Name="TitleBarBorder" 
                    Background="#2D2D2D" 
                    Grid.Row="0" 
                    Grid.RowSpan="1"
                    Height="40"
                    MouseDown="TitleBarBorder_MouseDown"
                    MouseMove="TitleBarBorder_MouseMove">

                <DockPanel LastChildFill="True">

                    <!--Window's Button-->
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" FlowDirection="RightToLeft">
                        <!-- Закрыть -->
                        <fade:FadeButton x:Name="CloseBtn" 
                                         Click="CloseBtn_Click" 
                                         FocusedBackground="#E81123"
                                         Style="{StaticResource TitleButtonStyle}">
                            <TextBlock Text="✕" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </fade:FadeButton>

                        <!-- В окно/На весь экран -->
                        <fade:FadeButton x:Name="DockBtn" 
                                         Click="DockBtn_Click"
                                         Style="{StaticResource TitleButtonStyle}">
                            <TextBlock Text="🗖" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </fade:FadeButton>

                        <!-- Свернуть -->
                        <fade:FadeButton x:Name="MinimizeBtn" 
                                         Click="MinimizeBtn_Click" 
                                         Style="{StaticResource TitleButtonStyle}">
                            <TextBlock Text="–" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </fade:FadeButton>
                    </StackPanel>

                    <!--Logo & Titre-->
                    <StackPanel DockPanel.Dock="Left" 
                                Orientation="Horizontal" 
                                FlowDirection="LeftToRight"
                                VerticalAlignment="Center"
                                Margin="15,0,0,0">

                        <!-- Название приложения -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding WindowTitle}" 
                                       VerticalAlignment="Center" 
                                       Foreground="White" 
                                       FontSize="16" 
                                       FontWeight="Medium" 
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding WindowTitleVersion}" 
                                       VerticalAlignment="Center"
                                       Foreground="#AAAAAA" 
                                       FontSize="10" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Пустая панель для перетаскивания -->
                    <Border Background="Transparent"/>
                </DockPanel>
            </Border>
        </Grid>
    </Border>
</Window>